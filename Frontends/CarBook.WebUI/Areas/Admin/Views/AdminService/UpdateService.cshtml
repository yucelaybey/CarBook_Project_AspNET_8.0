@model UpdateServiceDto
@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">

        <div class="card">
            <div class="card-body">

                <h4 class="card-title">Hizmet Güncelleme Sayfası</h4>
                <p class="card-subtitle mb-4">Ana sayfada ve hizmetler sayfasındaki hizmetler bölümündeki bilgileri bu sayfadan güncelleyebilirsin. Lütfen maksimum 4 adet hizmet ekleyiniz.</p>

                <form method="post">
                    <input type="hidden" asp-for="serviceID" />
                    <div class="form-group">
                        <label for="exampleInputTitle">Başlık Adı</label>
                        <input type="text" class="form-control" id="exampleInputTitle" asp-for="title" placeholder="Başlık Giriniz">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputDescription">Açıklama</label>
                        <input type="text" class="form-control" id="exampleInputDescription" asp-for="description" placeholder="Açıklama Giriniz">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputIconUrl">Icon Url</label>
                        <input type="text" class="form-control" id="exampleInputIconUrl" asp-for="iconUrl" placeholder="İcon Adını Giriniz">
                    </div>

                    <button type="submit" class="btn btn-primary waves-effect waves-light">Hizmet Veri Girişini Güncelle</button>
                </form>

            </div>
        </div>
    </div>
</div>
@model CreateAuthorDto
@{
    ViewData["Title"] = "CreateAuthor";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">

        <div class="card">
            <div class="card-body">

                <h4 class="card-title">Yeni Yazar Girişi</h4>
                <p class="card-subtitle mb-4">Yeni Yazar bilgileri buradan girebilirsiniz.Tüm bilgileri eksiksiz dolduralım.</p>

                <form method="post">

                    <div class="form-group">
                        <label for="exampleInputName">Başlık</label>
                        <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Ad Soyad Giriniz">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputImageUrl">Açıklama</label>
                        <input type="text" class="form-control" id="exampleInputImageUrl" asp-for="ImageUrl" placeholder="Resim Giriniz">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputDescription">Video Linki</label>
                        <input type="text" class="form-control" id="exampleInputDescription" asp-for="Description" placeholder="Açıklama Giriniz">
                    </div>

                    <button type="submit" class="btn btn-primary waves-effect waves-light">Yeni Yazarı Kaydet</button>
                </form>

            </div>
        </div>
    </div>
</div>


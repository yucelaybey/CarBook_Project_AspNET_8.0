@model UpdateAboutDto

@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">

        <div class="card">
            <div class="card-body">

                <h4 class="card-title">Yeni Hakkımızda Alanı Girişi</h4>
                <p class="card-subtitle mb-4">Ana sayfanın ve Hakkımızda sayfasının "hakkım" alanında gözükecek bilgileri aşağıdan girebilirsiniz.</p>

                <form method="post">
                    <input type="hidden" asp-for="aboutID" />
                    <div class="form-group">
                        <label for="exampleInputTitle">Başlık</label>
                        <input type="text" class="form-control" id="exampleInputTitle" asp-for="title" placeholder="Başlığı Giriniz">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputDescription">Açıklama</label>
                        <input type="text" class="form-control" id="exampleInputDescription" asp-for="description" placeholder="Açıklamayı Giriniz">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputImageUrl">Video Linki</label>
                        <input type="text" class="form-control" id="exampleInputImageUrl" asp-for="imageUrl" placeholder="Resim Linkini Giriniz">
                    </div>

                    <button type="submit" class="btn btn-primary waves-effect waves-light">Hakkımda Alanı Bilgisini Kaydet</button>
                </form>

            </div>
        </div>
    </div>
</div>


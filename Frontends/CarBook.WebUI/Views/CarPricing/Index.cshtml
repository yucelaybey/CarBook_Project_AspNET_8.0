@model List<ResultCarPricingListWithModelDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
    Random random = new Random();
}

<section class="ftco-section ftco-cart">
    <div class="container">
        <div class="row">
            <div class="col-md-12 ftco-animate">
                <div class="car-list">
                    <table class="table">
                        <thead class="thead-primary">
                            <tr class="text-center">
                                <th>&nbsp;</th>
                                <th>&nbsp;</th>
                                <th class="bg-primary heading">Günlük Kiralama Ücreti</th>
                                <th class="bg-dark heading">Haftalık Kiralama Ücreti</th>
                                <th class="bg-black heading">Aylık Kiralama Ücreti</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                int sayi = random.Next(1, 5);
                                <tr class="">
                                    <td class="car-image"><div class="img" style="background-image:url(@item.CoverImageUrl);"></div></td>
                                    <td class="product-name">
                                        <h3> @item.Brand @item.Model</h3>
                                        <p class="mb-0 rated">
                                            <span>Puan:</span>
                                            @for (int i = 0; i < sayi; i++)
                                            {
                                                <span class="ion-ios-star"></span>
                                            }
                                            @for (int i = 0; i < 5 - sayi; i++)
                                            {
                                                <span class="ion-ios-star grey"></span>
                                            }
                                        </p>
                                    </td>

                                    <td class="price">
                                        <p class="btn-custom"><a href="#">Aracı Kirala</a></p>
                                        <div class="price-rate">
                                            <h3>
                                                <span class="num"><small class="currency">₺</small> @item.DailyAmount.ToString("0.00")</span>
                                                <span class="per">/Günlük</span>
                                            </h3>
                                            <span class="subheading">Hızlıca Kirala</span>
                                        </div>
                                    </td>

                                    <td class="price">
                                        <p class="btn-custom"><a href="#">Aracı Kirala</a></p>
                                        <div class="price-rate">
                                            <h3>
                                                <span class="num"><small class="currency">₺</small> @item.WeeklyAmount.ToString("0.00")</span>
                                                <span class="per">/Haftalık</span>
                                            </h3>
                                            <span class="subheading">Hızlıca Kirala</span>
                                        </div>
                                    </td>

                                    <td class="price">
                                        <p class="btn-custom"><a href="#">Aracı Kirala</a></p>
                                        <div class="price-rate">
                                            <h3>
                                                <span class="num"><small class="currency">₺</small> @item.MonthlyAmount.ToString("0.00")=</span>
                                                <span class="per">/Aylık</span>
                                            </h3>
                                            <span class="subheading">Hızlıca Kirala</span>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>


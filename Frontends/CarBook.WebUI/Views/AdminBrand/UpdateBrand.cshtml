@model UpdateBrandDto
@{
    ViewData["Title"] = "UpdateBrand";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">

        <div class="card">
            <div class="card-body">

                <h4 class="card-title">Marka Güncelleme Sayfası</h4>
                <p class="card-subtitle mb-4">Marka adını aşağıdaki kutucuğa girebilirsiniz. Veri girişinden sonra kaydet butonuna tıklayarak işlemi tamamlayabilirsiniz.</p>

                <form method="post">
                    <input type="hidden" asp-for="BrandID" />
                    <div class="form-group">
                        <label for="exampleInputBrand">Marka Adı</label>
                        <input type="text" class="form-control" id="exampleInputBrand" asp-for="Name" placeholder="Marka Adını Giriniz">
                    </div>

                    <button type="submit" class="btn btn-primary waves-effect waves-light">Markayı Kaydet</button>
                </form>

            </div>
        </div>
    </div>
</div>

